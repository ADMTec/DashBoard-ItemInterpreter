<Window x:Class="ItemInterpreter.UI.Charts.PersonalShopPriceChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Gráfico de Preços do Personal Shop"
        Height="650" Width="1100"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="10" Padding="12" Margin="0 0 0 12">
            <Grid ColumnDefinitions="*,*,2*" ColumnSpacing="15">
                <StackPanel>
                    <TextBlock Text="⏳ Período" FontSize="14" Margin="0 0 0 4"/>
                    <ComboBox x:Name="PeriodoComboBox"
                              Width="180" Height="32"
                              SelectionChanged="Filtro_Changed"
                              Background="#1F1F1F" Foreground="White"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Itens rastreados" FontSize="14" Margin="0 0 0 4"/>
                    <ListBox x:Name="ItemSelector"
                             SelectionMode="Extended"
                             Height="120"
                             Background="#1F1F1F" Foreground="White"
                             BorderThickness="0"
                             SelectionChanged="Filtro_Changed"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Ações" FontSize="14" Margin="0 0 0 4"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Atualizar dados" Click="AtualizarDados_Click"
                                Width="140" Height="32"/>
                        <TextBlock x:Name="LastRefreshText" VerticalAlignment="Center" FontSize="12" Foreground="#BBBBBB"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" CornerRadius="10" Background="#2A2A2A">
            <oxy:PlotView x:Name="PriceChart" />
        </Border>
    </Grid>
</Window>
