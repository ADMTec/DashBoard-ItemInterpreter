<Window x:Class="ItemInterpreter.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mu Market Analyzer" Height="500" Width="800"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="🧠 Mu Market Analyzer" FontSize="26" FontWeight="Bold" TextAlignment="Center"/>

            <Button Content="📦 Interpretar Item Hexadecimal" Click="InterpretItem_Click"
                    Width="300" Height="50" Background="#007ACC" Foreground="White" FontSize="14"/>

            <Button Content="📊 Painel de Itens Rastreados" Click="DashboardMenu_Click"
                    Width="300" Height="50" Background="#4CAF50" Foreground="White" FontSize="14"/>

            <Button Content="📈 Gráfico de Itens" Click="AbrirGrafico_Click"
                    Width="300" Height="50" Background="#FF9800" Foreground="White" FontSize="14"/>

            <Button Content="💰 Gráfico de Zen" Click="AbrirGraficoZen_Click"
                    Width="300" Height="50" Background="#9C27B0" Foreground="White" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
